<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    android:theme="@style/Theme.TongueDrivers.NavigationDrawer"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/shippingFragment"
        android:name="com.example.tongue_drivers.fragments.ShippingFragment"
        android:label="fragment_shipping"
        tools:layout="@layout/fragment_shipping" >
        <action
            android:id="@+id/action_shippingFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.tongue_drivers.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_shippingFragment"
            app:destination="@id/shippingFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.tongue_drivers.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            app:popUpTo="@+id/loginFragment"
            app:popUpToInclusive="true"
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.tongue_drivers.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            app:popUpTo="@+id/loginFragment"
            app:popUpToInclusive="true"
            android:id="@+id/action_mainFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            app:popUpTo="@+id/shippingFragment"
            app:popUpToInclusive="true"
            android:id="@+id/action_mainFragment_to_shippingFragment"
            app:destination="@id/shippingFragment" />
    </fragment>
</navigation>