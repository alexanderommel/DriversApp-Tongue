<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/layout_rounded"
    android:layout_height="wrap_content">

    <ImageView
        android:background="@drawable/ic_baseline_keyboard_arrow_up_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:layout_centerHorizontal="true"
        android:text="Sushi Alex 6 de Diciembre requires you to ship an order."
        android:layout_width="200dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_width="32dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentEnd="true"
        app:cardCornerRadius="15dp"
        android:layout_marginEnd="2dp"
        android:layout_height="32dp">
        <TextView
            android:id="@+id/checkout_cart_item_quantity"
            android:layout_width="32dp"
            android:text="5\nmin"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:paddingTop="4dp"
            android:textSize="10sp"
            android:lineSpacingMultiplier="0.9"
            android:background="@color/tongueLightGrey"
            android:layout_height="32dp"/>
    </androidx.cardview.widget.CardView>

    <include
        layout="@layout/shipping_request_section"
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />





</RelativeLayout>