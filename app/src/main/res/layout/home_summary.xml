<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="driver"
            type="com.example.tongue_drivers.viewmodels.DriverViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/transparent"
        android:layout_marginHorizontal="20dp"

        android:elevation="150dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="64dp"
            android:elevation="64dp"
            app:cardCornerRadius="32dp"
            android:layout_centerHorizontal="true"
            android:layout_height="64dp">

            <ImageView
                android:background="@drawable/ic_woman_32"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:background="@color/white"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="32dp"
            android:backgroundTint="@color/white"
            app:cardElevation="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="42dp"
                android:orientation="vertical"
                android:layout_marginHorizontal="28dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@{driver.driver.name}"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_alignParentStart="true"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="48dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/ic_star_48"
                            android:layout_height="48dp" />

                        <TextView
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:text="4.4 Rating"
                            android:textAlignment="center"
                            android:layout_width="64dp"
                            android:layout_height="wrap_content" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="48dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/ic_car_24"
                            android:layout_height="48dp" />

                        <TextView
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:textAlignment="center"
                            android:text="1600 travels"
                            android:layout_width="64dp"
                            android:layout_height="wrap_content" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="48dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/ic_wallet_money_48"
                            android:layout_height="48dp" />

                        <TextView
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:text="700$ last month"
                            android:layout_width="64dp"
                            android:textAlignment="center"
                            android:layout_height="wrap_content" />

                    </androidx.appcompat.widget.LinearLayoutCompat>


                </RelativeLayout>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>